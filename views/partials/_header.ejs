  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <% if (users) { %>
        <form class="form-inline" action="/logout" method="POST">
          <div class="form-group mb-2">
            <label style="color: ghostwhite">Hello, <%= users %>&nbsp;&nbsp;</label>
            <button type="submit" class="btn btn-outline-light" style="border-color: transparent">Logout</button>
          </div>
        </form>
      <% } else { %>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
          <input class="form-control" type="text" placeholder="Username" name="username" style="width: 200px; margin: 1em">
          <button type="submit" class="btn btn-outline-light">Sign In</button>
        </div>
      </form>
      <% } %>
    </nav>
  </header>