  <header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      </div>
      <% if (typeof user === 'object') { %>
        <form class="form-inline" action="/urls/logout" method="POST">
          <div class="form-group mb-2">
            <label style="color: ghostwhite">Hello, <%= user.email %>&nbsp;&nbsp;</label>
            <button type="submit" class="btn btn-outline-light" style="border-color: transparent">Logout</button>
          </div>
        </form>
      <% } else { %>
        <div class="form-group mb-2">
          <a href="/urls/register"><button type="submit" class="btn btn-outline-light" style="border-color: transparent">Register</button></a>
        </div>
        <h5 style="color: white">|</h5>
        <div class="form-group mb-2">
          <a href="/urls/login"><button type="button" class="btn btn-outline-light" style="border-color: transparent">Log In</button></a>
        </div>
      <% } %>
    </nav>
  </header>